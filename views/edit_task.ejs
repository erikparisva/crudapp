<!-- include header -->
<%- include('include/_header') %>
<!-- /include header -->

    <!-- Main -->
    <main id="site-main">
        <div class="container">
            <div class="box-nav d-flex justifty-between">
                <div class="text-gradient">
                    <a href="/"><i class="fa-solid fa-backward"></i>All Tasks</a>
                </div>
            </div>
            <div class="form-title text-center">
                <h2 class="text-dark">Edit Task</h2>
                <span class="text-light">Use the form below to edit a task</span>
            </div>
                        <!-- Form -->
                        <form method="POST" id="edit_task">
                            <div class="new_task">
                             <div class="form-group">
                                 <label for="name" class="text-light">Task Name</label>
                                 <input type="hidden" name="id" value="<%= task._id%>">
                                 <input type="text" name="name" value="<%= task.name%>" placeholder="Task Name">
                             </div>
                             <div class="form-group">
                                 <label for="priority" class="text-light">Task Priority</label>
                                 <div class="radio inline">
                                     <input type="radio" id="radio-1" name="priority" value="Low" <%= task.priority == 'Low'?'checked':'' %>>
                                     <label for="radio-1" class="radio-label">Low</label>
                                 </div>
                                 <div class="radio inline">
                                     <input type="radio" id="radio-2" name="priority" value="Medium" <%= task.priority == 'Medium'?'checked':'' %>>
                                     <label for="radio-2" class="radio-label">Medium</label>
                                 </div>
                                 <div class="radio inline">
                                     <input type="radio" id="radio-3" name="priority" value="High" <%= task.priority == 'High'?'checked':'' %>>
                                     <label for="radio-3" class="radio-label">High</label>
                                 </div>
                             </div>
                             <div class="form-group">
                                 <label for="label" class="text-light">Task Label</label>
                                 <div class="radio inline">
                                     <input type="radio" id="radio-4" name="label" value="Personal" <%= task.label == 'Personal'?'checked':'' %>>
                                     <label for="radio-4" class="radio-label">Personal</label>
                                 </div>
                                 <div class="radio inline">
                                     <input type="radio" id="radio-5" name="label" value="Work" <%= task.label == 'Work'?'checked':'' %>>
                                     <label for="radio-5" class="radio-label">Work</label>
                                 </div>
                                 <div class="radio inline">
                                     <input type="radio" id="radio-6" name="label" value="Shopping" <%= task.label == 'Shopping'?'checked':'' %>>
                                     <label for="radio-6" class="radio-label">Shopping</label>
                                 </div>
                             </div>
             
                             
                             <div class="form-group">
                                 <button type="submit" class="btn text-dark update">Add</button>
                             </div>
             
                            </div>
                         </form>
        </div>
    </main>
<!-- /Main -->

<!-- include footer -->
<%- include('include/_footer') %>
<!-- /include footer -->